<%= search_form_with css: { wrapper_all: 'inline field', wrapper_input: 'field', wrapper_submit: 'field', submit: 'ui green button'} do |f| %>
  <div class="fields">
    <%= f.text_field :buyer_name, placeholder: 'Account Name' %>
    <%= f.text_field :buyer_identifier, placeholder: 'Account Num' %>
    <%= f.text_field :buyer_bank, placeholder: 'Buyer Bank' %>
    <%= f.submit %>
  </div>
<% end %>

