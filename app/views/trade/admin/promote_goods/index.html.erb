<div class="ui segment breadcrumb">
  <%= link_to 'All Promotes', admin_promotes_path, class: 'section' %>
  <% if params[:promote_id] %>
    <i class="fas fa-angle-right divider"></i>
    <div class="active section"><%= @promote.name %></div>
  <% end %>
  <i class="fas fa-angle-right divider"></i>
  <div class="active section">设置商品</div>
</div>

<div class="ui top attached borderless menu">
  <div class="header item">Promote Goods</div>
  <div class="right menu">
    <div class="item">
      <%= link_to 'New', new_admin_promote_good_path(promote_id: params[:promote_id]), class: 'ui teal button' %>
    </div>
  </div>
</div>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached table">
  <thead>
    <tr>
      <th><%= PromoteGood.human_attribute_name(:id) %></th>
      <th><%= PromoteGood.human_attribute_name(:promote) %></th>
      <th>
        <%= PromoteGood.human_attribute_name(:good) %>
      </th>
      <th><%= PromoteGood.human_attribute_name(:kind) %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @promote_goods.each do |promote_good| %>
    <tr>
      <td><%= promote_good.id %></td>
      <td><%= promote_good.promote_id %></td>
      <td><%= promote_good.good.name_detail %></td>
      <td><%= promote_good.kind_i18n %></td>
      <td>
        <%= link_to 'Edit', edit_admin_promote_good_path(promote_good), class: 'ui pink label' %>
        <%= link_to 'Destroy', admin_promote_good_path(promote_good), method: :delete, data: { confirm: t('.confirm') }, class: 'ui red label' %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @promote_goods %>
