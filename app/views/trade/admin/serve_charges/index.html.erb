<% content_for :breadcrumb do %>
<div class="ui basic segment breadcrumb">
  <%= link_to t('.back'), admin_serves_path, class: 'section' %>
  <i class="fas fa-angle-right divider"></i>
  <div class="active section"><%= t('.title') %></div>
</div>
<% end %>

<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached celled table">
  <thead>
    <tr>
      <th class="center aligned"><%= ServeCharge.human_attribute_name(:min) %></th>
      <th class="center aligned"><%= ServeCharge.human_attribute_name(:max) %></th>
      <th><%= ServeCharge.human_attribute_name(:extra) %></th>
      <th class="center aligned"><%= ServeCharge.human_attribute_name(:parameter) %></th>
      <th class="center aligned"><%= ServeCharge.human_attribute_name(:type) %></th>
      <th class="center aligned">
        <%= link_to new_admin_serve_charge_path(@serve), remote: true, class: 'ui mini primary button' do %>
          <i class="add circle icon"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @charges.each do |charge| %>
    <tr>
      <td class="center aligned"><%= charge.min %></td>
      <td class="center aligned"><%= charge.max %></td>
      <td>
        <%= simple_format(charge.extra) %>
      </td>
      <td class="center aligned"><%= charge.parameter %></td>
      <td class="center aligned"><%= charge.type_i18n %></td>
      <td class="center aligned">
        <%= link_to edit_admin_serve_charge_path(@serve, charge), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_serve_charge_path(@serve, charge), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @charges %>
