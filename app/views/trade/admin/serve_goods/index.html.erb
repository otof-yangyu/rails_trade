<% content_for :breadcrumb do %>
<div class="ui basic segment breadcrumb">
  <%= link_to 'All Serves', admin_serves_path, class: 'section' %>
  <% if params[:serve_id] %>
    <i class="fas fa-angle-right divider"></i>
    <div class="active section"><%= @serve.name %></div>
  <% end %>
  <i class="fas fa-angle-right divider"></i>
  <div class="active section">设置商品</div>
</div>
<% end %>

<div class="ui attached segment">
  <%= render 'search_form' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= ServeGood.human_attribute_name(:id) %></th>
      <th>
        <p><%= ServeGood.human_attribute_name(:good_type) %></p>
        <p><%= ServeGood.human_attribute_name(:good_id) %></p>
      </th>
      <th><%= ServeGood.human_attribute_name(:available) %></th>
      <th>
        <%= link_to new_admin_serve_good_path(serve_id: params[:serve_id]), remote: true, class: 'ui teal button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>

  <tbody>
  <% @serve_goods.each do |serve_good| %>
    <tr>
      <td><%= serve_good.id %></td>
      <td>
        <p><%= serve_good.good_type_i18n %></p>
        <% if serve_good.good_id %>
          <p><%= serve_good.good.name_detail %></p>
        <% else %>
          <p>不限商品</p>
        <% end %>
      </td>
      <td>
        <div class="ui toggle checkbox">
          <%= check_box_tag 'serve_good[available]', nil, serve_good.available, data: { method: :patch, remote: true, url: admin_serve_good_path(serve_good.id), submit: true }, id: nil %>
        </div>
      </td>
      <td>
        <%= link_to admin_serve_good_path(serve_good), method: :delete, data: { confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @serve_goods %>
