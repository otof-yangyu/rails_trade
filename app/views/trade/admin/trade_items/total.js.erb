$('#additions_body').html('<%= j(render partial: 'additions') %>');
$('#total_price').html('<%= j(render partial: 'total_price') %>');

<% if params[:add_id].present? %>
  $("#cart_item_<%= params[:add_id] %>").addClass('active');
<% end %>

<% if params[:remove_id].present? %>
  $("#cart_item_<%= params[:remove_id] %>").removeClass('active');
<% end %>

